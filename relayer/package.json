  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "npm run build &&  NODE_ENV=rinkeby node $NODE_DEBUG_OPTION dist/main",
    "start:prod": "npm run build &&  node dist/main",
    "start:prod:rinkeby": "npm run build &&  NODE_ENV=rinkeby node dist/main",
    "forever:prod:rinkeby": "npm run build && NODE_ENV=rinkeby forever start di st/main.js",
    "forever:prod:rinkeby-4096": "npm run build && NODE_ENV=rinkeby forever start -c \"node --max-old-space-size=4096\" dist/main.js",
    "forever:prod:rinkeby-8192": "npm run build && NODE_ENV=rinkeby forever start -c \"node --max-old-space-size=8192\" dist/main.js",
    "forever:stopall": "forever stopall",
    "lint": "eslint '{src,apps,libs,test}/**/*.ts' --fix"
  },
  "dependencies": {
    "@nestjs/common": "^6.10.14",
    "@nestjs/core": "^6.10.14",
    "@nestjs/platform-express": "^6.10.14",
    "@nestjs/swagger": "^4.2.6",
    "config": "^3.2.5",
    "fs": "0.0.1-security",
    "path": "^0.12.7",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.0",
    "rxjs": "^6.5.4",
    "swagger-ui-express": "^4.1.3",
    "truffle-hdwallet-provider": "^1.0.17",
    "uuid": "^7.0.1",
    "zeropool-lib": "0.4.67-node"
  },
  "devDependencies": {
    "@nestjs/cli": "^6.13.2",
    "@nestjs/schematics": "^6.8.1",
    "@nestjs/testing": "^6.10.14",
    "@types/config": "0.0.36",
    "@types/express": "^4.17.2",
    "@types/node": "^13.1.6",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^2.12.0",
    "@typescript-eslint/parser": "^2.12.0",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-import": "^2.19.1",
    "forever": "^2.0.0",
    "prettier": "^1.18.2",
    "supertest": "^4.0.2",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.6.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.7.4"
  }
